#!/bin/bash

if [[ -f "${HOME}/.tgbot" ]]
then
    . "${HOME}/.tgbot"
else
    echo -e "TOKEN=\"\"\nJSON=\"\"" > "${HOME}/.tgbot"
fi

if [[ -n "${1}" ]] && [[ -n "${2}" ]]
then
    curl -s -X POST -H "Content-Type: application/json" -d "@${JSON}/${2}.json" "https://api.telegram.org/bot${TOKEN}/${1}"
fi
